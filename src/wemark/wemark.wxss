@import "prism.wxss";

.wemark_wrapper {
  margin: 32px 32px;
  margin-bottom: 204rpx;
  padding-bottom: 204rpx;
  font-size: 32rpx;
  line-height: 1.8em;
}
.wemark_block_h1 {
  font-size: 64rpx;
  color: #1b1b1b;
  text-align: left;
  font-weight: bold;
  margin-bottom: 1em;
  border-left: 12px solid #ee5050;
  padding-left: 16px;
}
.wemark_inline_link {
  color: #ee5050;
  text-decoration: underline;
}
